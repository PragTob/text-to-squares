<html>
  <head>
    <title>
      Text to Squares
    </title>  
    <style>
      ol {
        clear: both;
        list-style-type: none;
        padding: 0;
      }
      .square {
        display: block;
        float: left;
        width: 50px;
        height: 50px;
        border-radius: 10px;
      }
      body {
            background-color:#ececec;
            font-family:'Droid Sans', arial, sans-serif;
            color: #777;
            }
      #page {
            max-width: 600px;
            margin: 12px auto;
            padding:0 30px 30px;
            z-index: 0;
    </style>
  </head>
  <body>
    <div id="page">
      <ol>
        <% rows.each do |row| %>
          <li>
            <ol>
              <% row.each do |square| %>
                <li class="square" style='background-color:#<%= square.color %>'></li>
              <% end %>
            </ol>
          </li> 
        <% end %>
      </ol>
    </div>
  </body>
</html>